<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".DBHandler"
    android:weightSum="1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campo_registro_nombre"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        style="@style/AlertDialog.AppCompat"
        android:hint="nombre" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campo_registro_eMail"
        android:inputType="textEmailAddress"
        android:hint="correo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        style="@style/AlertDialog.AppCompat"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campo_registro_pwd"
        android:inputType="textPassword"
        android:hint="contraseña"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        style="@style/AlertDialog.AppCompat"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campo_verificacion_pwd"
        android:inputType="textPassword"
        android:hint="confirmar_contraseña"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
    android:fontFamily="sans-serif"
    android:maxLines="1"
    style="@style/AlertDialog.AppCompat"
    />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.30"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:id="@+id/botonRegistrarNuevoUsuario"
        android:layout_gravity="center_horizontal"
        android:onClick="solicitarRegistro" />
</LinearLayout>